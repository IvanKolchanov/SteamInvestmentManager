<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/steam_item_information_round_corners"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/choose_currency"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/choseCurrency"/>
            <Spinner
                app:layout_constraintTop_toTopOf="@id/choose_currency"
                app:layout_constraintStart_toEndOf="@id/choose_currency"
                android:backgroundTint="@color/white"
                android:visibility="visible"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currencySpinner"/>
</androidx.constraintlayout.widget.ConstraintLayout>